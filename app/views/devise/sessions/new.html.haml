/ Login form
= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
  .list-block
    %ul
      %li.item-content
        .item-inner
          = f.label :email, class: 'item-title label'
          .item-input
            = f.email_field :email, autofocus: true, :placeholder => "Email"
      %li.item-content
        .item-inner
          = f.label :password, class: 'item-title label'
          .item-input
            = f.password_field :password, autocomplete: "off"
  .list-block
    %ul
      %li
        .content-block
          = f.submit "Log in", class: 'item-link button button-fill color-blue'
